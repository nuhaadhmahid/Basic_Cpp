{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "g++",
            "args": ["source/${fileBasename}", "-o", "build/${fileBasenameNoExtension}.exe"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "run",
            "type": "shell",
            "command": "$./build/${fileBasenameNoExtension}.exe",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }, 
        {
            "label": "clean",
            "type": "shell",
            "command": "rm",
            "args": ["-rf", "build/*"],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        }, 
        {
            "label": "build and run",
            "type": "shell",
            "group": {
                "kind": "test",
                "isDefault": false
            },
            "dependsOn": ["build", "run"]
        }
    ]
}
